{
  "extends": "standard",
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "window": false,
    "console": false,
    "React": true
  },

  "ecmaFeatures": {
      "jsx": true
  },
  "plugins": [
      "react"
  ],
  "rules": {
    "indent": [
      2,
      2
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
